{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "skipLibCheck": true,
    "alwaysStrict": true,

    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],

    "allowJs": true,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "sourceMap": true
  },


  "exclude": [ "node_modules", "**/*.js" ],

  "compileOnSave": false
}
